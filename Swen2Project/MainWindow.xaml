<Window x:Class="Swen2Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tour Planner" Height="700" Width="1200"
        MinHeight="600" MinWidth="900"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Modern UI Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E8E41"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>
        
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ListViewStyle" TargetType="ListView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.2" Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Control Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinHeight" Value="200"/>
        </Style>
        
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Medium" FontSize="13" TextWrapping="Wrap"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Top Menu Bar for common commands -->
        <Menu DockPanel.Dock="Top" Background="#2E7D32" Foreground="White" FontSize="13">
            <MenuItem Header="_File" Foreground="White">
                <MenuItem Header="_New Tour" />
                <MenuItem Header="_Import Tours" />
                <MenuItem Header="_Export Tours" />
                <Separator/>
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Edit" Foreground="White">
                <MenuItem Header="_Edit Tour" />
                <MenuItem Header="_Delete Tour" />
            </MenuItem>
            <MenuItem Header="_Reports" Foreground="White">
                <MenuItem Header="_Tour Report" />
                <MenuItem Header="_Summary Report" />
            </MenuItem>
            <MenuItem Header="_Help" Foreground="White">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>
        
        <!-- Status Bar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom" Background="#EEEEEE" Height="24" MinHeight="24">
            <TextBlock Text="Ready" Margin="5,0" />
        </StatusBar>
        
        <!-- Main Content Area -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="60"/>
                <RowDefinition Height="*" MinHeight="400"/>
            </Grid.RowDefinitions>
            
            <!-- Search Bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" 
                    Margin="0,0,0,15" Padding="16,12" MinHeight="60">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <TextBox Grid.Column="1" Style="{StaticResource SearchBoxStyle}" 
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="2" Content="Search" Margin="5,0,0,0" />
                </Grid>
            </Border>
            
            <!-- Left Panel: Tours List -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" 
                    Margin="0,0,10,0" Padding="0" MinHeight="400">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#F5F5F5" BorderBrush="#DDDDDD" 
                            BorderThickness="0,0,0,1" Padding="12,8" MinHeight="44">
                        <Grid>
                            <TextBlock Text="Tours" Style="{StaticResource HeaderTextStyle}" 
                                      VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="+" Style="{StaticResource ActionButtonStyle}" 
                                        ToolTip="Add New Tour"/>
                                <Button Content="-" Style="{StaticResource ActionButtonStyle}" 
                                        Background="#F44336" 
                                        ToolTip="Remove Selected Tour"/>
                                <Button Content="⋮" Style="{StaticResource ActionButtonStyle}" 
                                        ToolTip="More Options"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <ListView Style="{StaticResource ListViewStyle}" Margin="0" BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" MinWidth="200">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" MinWidth="150"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tour Name Example" 
                                                   FontWeight="SemiBold" FontSize="14" 
                                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Vienna" Foreground="#666666" Margin="0,0,5,0" TextWrapping="Wrap"/>
                                            <TextBlock Text="→" Foreground="#666666" Margin="0,0,5,0"/>
                                            <TextBlock Text="Salzburg" Foreground="#666666" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Orientation="Vertical" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" MinWidth="40">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="P:" ToolTip="Popularity" Margin="0,0,2,0" 
                                                          Foreground="#888888" FontSize="12"/>
                                                <TextBlock Text="4.2" Foreground="#888888" 
                                                          FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="CF:" ToolTip="Child-Friendliness" Margin="0,0,2,0" 
                                                          Foreground="#888888" FontSize="12"/>
                                                <TextBlock Text="3.5" Foreground="#888888" 
                                                          FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <!-- Example items for design-time preview -->
                        <ListViewItem>
                            <TextBlock Text="Vienna to Salzburg" />
                        </ListViewItem>
                        <ListViewItem>
                            <TextBlock Text="Innsbruck Mountain Trail" />
                        </ListViewItem>
                        <ListViewItem>
                            <TextBlock Text="Danube Bike Tour" />
                        </ListViewItem>
                    </ListView>
                </DockPanel>
            </Border>
            
            <!-- Right Panel: Tour Details -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" MinHeight="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="50"/>
                        <RowDefinition Height="*" MinHeight="300"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Details Header -->
                    <Grid Grid.Row="0">
                        <TextBlock Text="Vienna to Salzburg" Style="{StaticResource HeaderTextStyle}" 
                                  FontSize="20" Margin="0,0,0,15" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Edit" Margin="5,0"/>
                            <Button Content="Generate Report" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Tour Content -->
                    <TabControl Grid.Row="1" MinHeight="300">
                        <TabItem Header="Overview">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="5">
                                    <!-- Map Section -->
                                    <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,5,0,15" MinHeight="200">
                                        <Grid Height="Auto" MinHeight="200">
                                            <Rectangle Fill="#E8F5E9"/> <!-- Placeholder for map -->
                                            <TextBlock Text="Tour Route Map" HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Tour Details -->
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" MinWidth="200"/>
                                            <ColumnDefinition Width="*" MinWidth="200"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0" 
                                               Background="#F9F9F9" MinHeight="160">
                                            <StackPanel>
                                                <TextBlock Text="Tour Information" Style="{StaticResource SubHeaderTextStyle}"/>
                                                <Grid Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" MinWidth="100"/>
                                                        <ColumnDefinition Width="*" MinWidth="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="From:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Vienna" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="To:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Salzburg" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Distance:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="295 km" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Transport:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="Bicycle" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Est. Time:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="15 hours" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,0,0" 
                                               Background="#F9F9F9" MinHeight="160">
                                            <StackPanel>
                                                <TextBlock Text="Statistics" Style="{StaticResource SubHeaderTextStyle}"/>
                                                <Grid Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" MinWidth="130"/>
                                                        <ColumnDefinition Width="*" MinWidth="50"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Popularity:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="4.2/5" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Child-Friendliness:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="3.5/5" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Average Rating:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="4.7/5" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Logs:" FontWeight="SemiBold" Margin="0,0,10,5" TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="8" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Tour Description -->
                                    <TextBlock Text="Description" Style="{StaticResource SubHeaderTextStyle}"/>
                                    <Border Background="#F9F9F9" Style="{StaticResource CardStyle}" MinHeight="100">
                                        <TextBlock TextWrapping="Wrap">
                                            This scenic bicycle tour from Vienna to Salzburg follows along the Danube 
                                            river for much of the route, offering beautiful views of the Austrian 
                                            countryside. The path is mostly flat with some gentle hills as you 
                                            approach Salzburg. Suitable for intermediate cyclists, with plenty of 
                                            villages and towns along the way for rest stops.
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem Header="Tour Logs">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" MinHeight="46"/>
                                    <RowDefinition Height="*" MinHeight="250"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Tour Logs Header -->
                                <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" 
                                       Padding="10,8" MinHeight="46">
                                    <Grid>
                                        <TextBlock Text="Tour Logs" Style="{StaticResource SubHeaderTextStyle}" 
                                                  Margin="0" VerticalAlignment="Center"/>
                                        <Button Content="Add Log" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Tour Logs List -->
                                <ListView Grid.Row="1" Style="{StaticResource ListViewStyle}" BorderThickness="0" MinHeight="250">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" MinWidth="300">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" MinWidth="80"/>
                                                        <ColumnDefinition Width="*" MinWidth="150"/>
                                                        <ColumnDefinition Width="Auto" MinWidth="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="2024-02-15" 
                                                             VerticalAlignment="Top" Width="80" TextWrapping="Wrap"/>
                                                    
                                                    <StackPanel Grid.Column="1" Margin="10,0">
                                                        <TextBlock TextWrapping="Wrap">
                                                            Completed the eastern half of the tour. Weather was perfect with light breeze.
                                                            Roads were in good condition and traffic was light.
                                                        </TextBlock>
                                                        <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                                <TextBlock Text="Difficulty:" FontWeight="SemiBold" Margin="0,0,5,0" TextWrapping="Wrap"/>
                                                                <TextBlock Text="3/5" Margin="0,0,10,0" TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                                <TextBlock Text="Total Time:" FontWeight="SemiBold" Margin="0,0,5,0" TextWrapping="Wrap"/>
                                                                <TextBlock Text="7h 20m" Margin="0,0,10,0" TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Distance:" FontWeight="SemiBold" Margin="0,0,5,0" TextWrapping="Wrap"/>
                                                                <TextBlock Text="150 km" TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" HorizontalAlignment="Center">
                                                            <TextBlock Text="Rating:" Margin="0,0,5,0" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                            <TextBlock Text="5/5" FontWeight="Bold" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                        <Button Content="Edit" Padding="8,2" MinWidth="75" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <!-- Example items for design-time preview -->
                                    <ListViewItem>
                                        <TextBlock Text="Log 1" />
                                    </ListViewItem>
                                    <ListViewItem>
                                        <TextBlock Text="Log 2" />
                                    </ListViewItem>
                                </ListView>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>